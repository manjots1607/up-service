<% include partials/header %>
    <div class="container py-5">
    <div class="row mb-5">
        <div class="col-lg-12 mx-auto mb-5  text-center">
            <h1 class="display-4">Manage Calls</h1>
        </div>
        <div class="col-lg-4"></div>
        <div class="col-lg-4 mb-5 ">
            <div class="card shadow-drk">

                <div class="card-header "><img class="pending-call-card-img" src="/image/phone-blue.png"></div>
                <div class="card-body">

                    <h4 class="card-title text-primary">Call Types</h4>

                    <div class="card-body pl-0 ">
                        <ol>
                            <% callTypes.forEach((callType)=>{ %>
                            <li><h6> <%= callType.callType %> </h6> </li>
                            <% })%>
                        </ol>

                    </div>
                </div>
                <div class="card-footer  bg-primary"></div>
            </div>
        </div>
        <div class="col-lg-4"></div>
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="card p-4 text-center shadow-drk" style="background-color:#f1f1f1;border:none" >
                <h2>Create New Call Type</h2>
                <div class="card-body">
                    <form method="post" action="/admin/calls/callType">
                        
                        
                        <div class="form-group input-group">
                            <div class="input-group-prepend bg-primary text-white pl-3 pr-3 pt-2" style="font-size:20px"><i class="fas fa-phone-alt" ></i></div>
                            <input type="text"  name="callType" placeholder="Enter new callType " class="form-control" required />
                        </div>
                        
                        <button class="btn btn-outline-primary"> Submit </button>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
    </div>
    
    </body>
</html>